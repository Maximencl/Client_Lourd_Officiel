<Window x:Class="ReservationSalles.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ReservationSalles.ViewModels"
        xmlns:conv="clr-namespace:ReservationSalles.Converters"
        Title="Login"
        Width="420" Height="300"
        WindowStartupLocation="CenterScreen">

    <!-- Convertisseurs pour l'œil -->
    <Window.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InverseBooleanToVisibilityConverter x:Key="InvBoolToVis"/>
    </Window.Resources>

    <!-- ViewModel Login -->
    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <!-- Fond gris -->
    <Grid Background="#F0F0F0" Margin="10">
        <Grid.RowDefinitions>
            <!-- Ligne 0 : Titre -->
            <RowDefinition Height="Auto"/>
            <!-- Ligne 1 : La “carte” blanche -->
            <RowDefinition Height="Auto"/>
            <!-- Ligne 2 : Message d'erreur -->
            <RowDefinition Height="Auto"/>
            <!-- Ligne 3 : Espace flexible -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre centré -->
        <TextBlock Text="Veuillez vous connecter"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"
                   Grid.Row="0" />

        <!-- Border qui contient le formulaire -->
        <Border Background="White"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Grid.Row="1">

            <!-- Grille interne pour aligner labels / champs -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Identifiant -->
                    <RowDefinition Height="Auto"/>
                    <!-- Mot de passe -->
                    <RowDefinition Height="Auto"/>
                    <!-- Bouton Se connecter -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Label -->
                    <ColumnDefinition Width="200" />
                    <!-- Champ -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Bouton oeil -->
                </Grid.ColumnDefinitions>

                <!-- Label Identifiant -->
                <TextBlock Text="Identifiant :"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Grid.Row="0" Grid.Column="0"/>
                <!-- Champ Identifiant -->
                <TextBox Text="{Binding Username}"
                         Height="25"
                         Margin="0,5"
                         Grid.Row="0" Grid.Column="1"
                         Grid.ColumnSpan="2"/>

                <!-- Label Mot de passe -->
                <TextBlock Text="Mot de passe :"
                           VerticalAlignment="Center"
                           Margin="0,10,10,0"
                           Grid.Row="1" Grid.Column="0"/>

                <!-- PasswordBox (caché) -->
                <PasswordBox x:Name="PwdBox"
                             Height="25"
                             Margin="0,10,0,0"
                             PasswordChanged="PwdBox_PasswordChanged"
                             Visibility="{Binding IsPasswordVisible, Converter={StaticResource InvBoolToVis}}"
                             Grid.Row="1" Grid.Column="1"/>
                <!-- TextBox (clair) -->
                <TextBox x:Name="TxtPwd"
                         Height="25"
                         Margin="0,10,0,0"
                         Text="{Binding Password}"
                         Visibility="{Binding IsPasswordVisible, Converter={StaticResource BoolToVis}}"
                         Grid.Row="1" Grid.Column="1"/>
                <!-- Bouton œil -->
                <Button Width="30"
                        Height="25"
                        Content="👁"
                        Command="{Binding TogglePasswordVisibilityCommand}"
                        Margin="5,10,0,0"
                        Grid.Row="1" Grid.Column="2"/>

                <!-- Bouton Se connecter -->
                <Button Content="Se connecter"
                        Width="120"
                        Margin="0,10,0,0"
                        Command="{Binding LoginCommand}"
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Left"/>
            </Grid>
        </Border>

        <!-- Message d'erreur en rouge -->
        <TextBlock Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"
                   Grid.Row="2" />
    </Grid>
</Window>